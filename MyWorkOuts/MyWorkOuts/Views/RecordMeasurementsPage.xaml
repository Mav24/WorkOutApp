    <ScrollView>
        <StackLayout>
            <StackLayout HorizontalOptions="Fill" BackgroundColor="Yellow">
                <Label Text="Record your Measurements" FontSize="Medium" HorizontalOptions="Center" Margin="10,10" TextColor="Black"/>
            </StackLayout>
            <StackLayout HorizontalOptions="Center">
                <Image Source="measurements96.png" />
            </StackLayout>
            <StackLayout Padding="40,20">
                <StackLayout>
                    <Entry x:Name="ChestEntry"
                   Placeholder="Chest"
                       Keyboard="Numeric"
                       MaxLength="3" />
                </StackLayout>
                <StackLayout>
                    <Entry x:Name="LeftArm"
                       HorizontalOptions="FillAndExpand"
                       Placeholder="Left Arm"
                       Keyboard="Numeric"
                       MaxLength="3" />
                </StackLayout>

                <StackLayout>
                    <Entry x:Name="RightArm"
                       HorizontalOptions="FillAndExpand"
                       Placeholder="Right Arm"
                       Keyboard="Numeric"
                       MaxLength="3" />
                </StackLayout>

                <StackLayout>
                    <Entry x:Name="Waist"
                   Placeholder="Waist"
                       Keyboard="Numeric"
                       MaxLength="3" />
                </StackLayout>

                <StackLayout>
                    <Entry x:Name="Hip"
                   Placeholder="Hip"
                       Keyboard="Numeric"
                       MaxLength="3" />
                </StackLayout>

                <StackLayout>
                    <Entry x:Name="LeftThigh"
                   Placeholder="Left Thigh"
                       Keyboard="Numeric"
                       MaxLength="3" />
                </StackLayout>

                <StackLayout>
                    <Entry x:Name="RightThigh"
                   Placeholder="Right Thigh"
                       Keyboard="Numeric"
                       MaxLength="3" />
                </StackLayout>

                <StackLayout>
                    <Entry x:Name="CurrentWeigh"
                       Placeholder="Weight"
                       Keyboard="Numeric"
                       MaxLength="3" />
                </StackLayout>
                <StackLayout Padding="5">
                    <Button x:Name="Save"
                        Text="Save"
                        Clicked="Save_Clicked" />

                </StackLayout>
            </StackLayout>
            
